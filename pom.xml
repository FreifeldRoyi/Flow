<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>freifeld</groupId>
    <artifactId>flow</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <!-- plugin dependencies -->
        <version.maven.compiler>3.3</version.maven.compiler>

        <!-- general dependencies -->
        <version.gson>2.3.1</version.gson>

        <!-- testing dependencies -->
        <version.testng>6.9.6</version.testng>

        <!-- other stuff -->
        <version.java>1.8</version.java>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${version.maven.compiler}</version>
                <configuration>
                    <source>${version.java}</source>
                    <target>${version.java}</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- lib dependencies -->
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>${version.gson}</version>
        </dependency>

        <!-- test dependencies -->
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>${version.testng}</version>
        </dependency>

        <dependency>
            <groupId>microsoft.aspnet.signalr</groupId>
            <artifactId>SignalR-Java-Client</artifactId>
            <version>1.0</version>
        </dependency>
    </dependencies>
</project>